# Basic settings
set previewer ~/scripts/preview
set preview true
set hidden true
set drawbox true
set icons true
set ignorecase true
set shell bash
set shellopts '-eu'
set scrolloff 10

cmd open &{{
    case $(file --mime-type -Lb $f) in
        text/*) lf -remote "send $id \$$EDITOR \$fx";;
        *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
}}

cmd sudomkfile ${{
  printf "File Name: "
  read ans
  sudo $EDITOR $ans
}}

cmd setlockscreen %cp "$f" betterlockscreen -u "$f"

cmd fzf_jump ${{
  res="$(find . -maxdepth 3 | fzf --reverse --header='Jump to location')"
  if [ -f "$res" ]; then
    cmd="select"
  elif [ -d "$res" ]; then
    cmd="cd"
  fi
  lf -remote "send $id $cmd \"$res\""
}}

define a custom 'rename' command without prompt for overwrite
cmd rename %[ -e $1 ] && printf "file exists" || mv $f $1
map r push :rename<space>

# extract the current file with the right command
# (xkcd link: https://xkcd.com/1168/)
cmd unarchive ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
        *) echo "Unsupported format";;
    esac
}}

cmd zip %zip -r "$f" "$f"
cmd tar %tar cvf "$f.tar" "$f"
cmd targz %tar cvzf "$f.tar.gz" "$f"
cmd tarbz2 %tar cjvf "$f.tar.bz2" "$f"

cmd stripspace %stripspace "$f"

# Bindings
## Remove some defaults
map m
map "'"
map '"'

# Archive mappings
map az zip
map at tar
map ag targz
map ab targz
map u unarchive

map ss stripspace

# Basic functions
map . set hidden!
map DD delete
map p paste
map x cut
map y copy
map <enter> open
map mf mkfile
map mr sudomkfile
map md mkdir
map ms $mkscript 
map bg setlockscreen
map r rename
map H top
map L bottom
map R reload
map U unselect

# File Openers
map e $$EDITOR "$f"
map u $view "$f"
map o open $f
map O $mimeopen --ask $f

# Movement
map gD cd ~/Downloads/
map gd cd ~/Dropbox/
map gp cd ~/Private/
map gG cd ~/dev/
map gp cd ~/Pictures/
map gw cd ~/Dropbox/backgrounds/
map gc cd ~/.config/

